<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="0.18">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="130dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/m_imagine_carte_view"
                android:layout_weight="0.21"
                android:paddingLeft="10dp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:layout_weight="0.38">

                <RatingBar
                    android:id="@+id/ratingBar3"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_input_add"
                    android:id="@+id/floatingActionButton_setNota"
                    android:layout_weight="1" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@mipmap/dqwe"
                    android:id="@+id/floatingActionButton"
                    android:layout_weight="1" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.38">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="   Nume:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/m_nume_carte" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="   Autor:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/m_autor_carte" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="   Gen:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView23" />

                    <TextView
                        android:text="Economie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/m_gen_carte" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:weightSum="1"
        android:layout_weight="0.99">

        <Space
            android:layout_height="match_parent"
            android:layout_width="20dp" />

        <ScrollView
            android:layout_height="match_parent"
            android:layout_weight="0.24"
            android:layout_width="300dp">

            <TextView
                android:text="Ghiozdanelele din colectia Zoo de la SKIP HOP urmaresc linia tematica cu animalute si sunt suficient de incapatoare pentru o zi la gradinita sau la joaca. Buzunarul din fata este protejat de un material izolator, special pentru a putea pune in el gustarile in siguranta. In plus, are un spatiu dedicat pentru creioane si alte obiecte mici. Pentru o sticluta de apa sau suc ghiozdanelul are pe margine un buzunar reglabil cu plasa. Ghiozdanelele din colectia Zoo de la SKIP HOP urmaresc linia tematica cu animalute si sunt suficient de incapatoare pentru o zi la gradinita sau la joaca. Buzunarul din fata este protejat de un material izolator, special pentru a putea pune in el gustarile in siguranta. In plus, are un spatiu dedicat pentru creioane si alte obiecte mici. Pentru o sticluta de apa sau suc ghiozdanelul are pe margine un buzunar reglabil cu plasa.Ghiozdanelele din colectia Zoo de la SKIP HOP urmaresc linia tematica cu animalute si sunt suficient de incapatoare pentru o zi la gradinita sau la joaca. Buzunarul din fata este protejat de un material izolator, special pentru a putea pune in el gustarile in siguranta. In plus, are un spatiu dedicat pentru creioane si alte obiecte mici. Pentru o sticluta de apa sau suc ghiozdanelul are pe margine un buzunar reglabil cu plasa. Ghiozdanelele din colectia Zoo de la SKIP HOP urmaresc linia tematica cu animalute si sunt suficient de incapatoare pentru o zi la gradinita sau la joaca. Buzunarul din fata este protejat de un material izolator, special pentru a putea pune in el gustarile in siguranta. In plus, are un spatiu dedicat pentru creioane si alte obiecte mici. Pentru o sticluta de apa sau suc ghiozdanelul are pe margine un buzunar reglabil cu plasa.  "
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/m_descriere_carte"
                android:layout_weight="1.65" />
        </ScrollView>

        <Space
            android:layout_height="match_parent"
            android:layout_weight="3.58"
            android:layout_width="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <Button
            android:text="Citeste"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/m_btn_citeste"
            android:layout_marginLeft="14dp"/>

        <Button
            android:text="Vreau sa citesc"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/m_btn_vreau" />

        <Button
            android:text="Recomanda"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/m_btn_recomanda" />
    </LinearLayout>
</LinearLayout>