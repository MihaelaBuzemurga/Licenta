<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_login" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="291dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="LOGARE"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:id="@+id/textView"
            android:gravity="center_vertical|center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="normal|bold"
            tools:fontFamily="Eras Light ITC" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/m_nume"
            android:gravity="center_vertical|center"
            android:hint="Nume"
            android:background="?attr/colorButtonNormal"
            android:layout_weight="0.16" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/m_parola"
            android:hint="Parola"
            android:layout_gravity="center"
            android:gravity="center_vertical|center"
            android:background="?attr/colorButtonNormal"
            android:layout_weight="0.16"
            android:layout_marginTop="5dp" />

        <Button
            android:text="Logare"
            android:textColor="@android:color/white"
            android:layout_width="112dp"
            android:layout_height="37dp"
            android:id="@+id/button2"
            android:background="#6c131a"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:onClick="pressLogin" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21" />

        <Button
            android:text="Nu aveți cont? Înregistrati-vă!"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/button3"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical|center"
            android:onClick="pressRegister"/>

    </LinearLayout>

</LinearLayout>