<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/com.example.mihaelabuzemurga.readerlish"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/header_bun"
    android:id="@+id/acvt"
   >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="206dp"
                android:layout_height="62dp"
                android:layout_gravity="bottom">

                <ImageButton
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton5"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:text="Nickname"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:id="@+id/textView2"
                    android:layout_gravity="bottom" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_gravity="bottom|right"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.88"></LinearLayout>

                <ImageButton
                    android:layout_width="43dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageButton4"
                    android:src="@android:color/transparent"
                    android:elevation="0dp"
                    android:adjustViewBounds="false"
                    android:visibility="visible"
                    android:layout_gravity="bottom|right"
                    tools:baselineAlignBottom="false"
                    android:baselineAlignBottom="false"
                    android:background="@mipmap/notify"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

        </LinearLayout>

</FrameLayout>